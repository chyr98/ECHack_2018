{
    "name": "Fake News Detector",
    "version": "1.0",
    "description": "No more fake news!",
    "permissions": ["declarativeContent", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "images/icon.png"
        }
    },
    "icons": {
        "128": "images/icon.png"
    },
    "manifest_version": 2
}